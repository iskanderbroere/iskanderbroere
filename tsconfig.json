{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "preserve",
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
   },
  "include": [
    "src",
    "./next.config.js",
    "./server.js",
    "src/types/sass-modules.d.ts",
    "./package.json",
    "./postcss.config.json",
    "cypress"
  ],
  "exclude": [
    "node_modules"
  ]
}
